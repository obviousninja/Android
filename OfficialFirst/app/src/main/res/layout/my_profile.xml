<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orangeRed"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >

    <Space
        android:layout_width="10dp"
        android:layout_height="10dp" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height = "20dp"
        android:background="@color/orange"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_margin="1dp"
            android:background="@color/deepOrange"
            android:text="My Profile"
            android:textColor="@color/lightYellow"
            />

    </LinearLayout>

    <Space
        android:layout_width="10dp"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/orange"
        android:layout_gravity="center"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Secret Question"
            android:background="@color/orangeRed"
            android:layout_margin="1dp"
            android:textColorHint="@color/lightYellow"
            android:id="@+id/ProfileSecretQuestion"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/orange"
        android:layout_gravity="center"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Secret Answer"
            android:background="@color/orangeRed"
            android:layout_margin="1dp"
            android:textColorHint="@color/lightYellow"
            android:id="@+id/ProfileSecretAnswer"
            android:gravity="center"
            />

    </LinearLayout>

    <Space
        android:layout_width="10dp"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/orange"
        android:layout_gravity="center"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="First Name"
            android:background="@color/orangeRed"
            android:layout_margin="1dp"
            android:textColorHint="@color/lightYellow"
            android:id="@+id/profilefirstname"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/orange"
        android:layout_gravity="center"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Last Name"
            android:background="@color/orangeRed"
            android:layout_margin="1dp"
            android:textColorHint="@color/lightYellow"
            android:id="@+id/profilelastname"
            android:gravity="center"
            />

    </LinearLayout>

    <Space
        android:layout_width="10dp"
        android:layout_height="10dp" />

    <!--when click on save, the information should
     be submitted to our data server and a toast message should be displayed
     saying saved!
     -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height = "50dp"
            android:background="@color/orange"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/profilecancel"
            >

            <TextView
                android:layout_width="138dp"
                android:layout_height="48dp"
                android:layout_margin="1dp"
                android:background="@color/deepOrange"
                android:textColor="@color/lightYellow"
                android:text="Cancel"
                android:gravity="center"
                android:clickable="true"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height = "50dp"
            android:background="@color/orange"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/profilesave"
            >

            <TextView
                android:layout_width="138dp"
                android:layout_height="48dp"
                android:layout_margin="1dp"
                android:background="@color/deepOrange"
                android:textColor="@color/lightYellow"
                android:text="Save"
                android:gravity="center"
                android:clickable="true"

                />

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>