<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/orangeRed"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageLogo"
        android:src="@drawable/pawn1"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/orange"
        android:layout_alignBaseline="@+id/imageLogo"
        android:layout_below="@+id/imageLogo"
        android:layout_centerHorizontal="true"
        android:id="@+id/usernameLinearLayout"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Username"
            android:background="@color/orangeRed"
            android:layout_margin="1dp"
            android:textColorHint="@color/lightYellow"
            android:id="@+id/usernameinput"
            android:gravity="center"
            />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/usernameLinearLayout"
        android:id="@+id/belowUserSpace"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/orange"
        android:layout_below="@+id/belowUserSpace"
        android:layout_alignBaseline="@+id/belowUserSpace"
        android:layout_centerHorizontal="true"
        android:id="@+id/passwordLayout"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Password"
            android:background="@color/orangeRed"
            android:layout_margin="1dp"
            android:textColorHint="@color/lightYellow"
            android:id="@+id/passwordinput"
            android:gravity="center"
            />

    </LinearLayout>

    <Space
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:id="@+id/belowPassword"
        android:layout_below="@+id/passwordLayout"
        />



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/orange"
        android:layout_gravity="center"
        android:layout_below="@+id/belowPassword"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Sign In"
            android:background="@color/deepOrange"
            android:layout_margin="1dp"
            android:textColor="@color/lightYellow"
            android:gravity="center"
            android:clickable="true"
            android:id="@+id/signin"
            />


    </LinearLayout>

</RelativeLayout>
